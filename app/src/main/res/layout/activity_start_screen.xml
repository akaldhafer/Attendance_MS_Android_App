<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartScreen">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:background="@drawable/header"
        android:contentDescription="header" />


    <ImageView
        android:layout_width="174dp"
        android:layout_height="168dp"
        android:id="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="124dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="113dp"
        android:src="@drawable/apu_ic" />


    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_below="@+id/logo"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="28dp"
        android:layout_centerHorizontal="true"
        android:text="Attendance Management System"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:transitionName="login" />

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-100dp"
        android:layout_marginBottom="140dp"
        android:src="@drawable/circlet"
        android:transitionName="image" />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_below="@+id/circle4"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="369dp"
        android:layout_marginRight="-90dp"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/circle" />

    <ImageView
        android:id="@+id/circle3"
        android:layout_width="139dp"
        android:layout_height="148dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-75dp"
        android:layout_marginBottom="-42dp"
        android:layout_toLeftOf="@id/circle2"
        android:src="@drawable/circlet" />

    <ImageView
        android:id="@+id/circle4"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_below="@+id/bgHeader"
        android:layout_alignParentRight="true"
        android:layout_marginTop="48dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/circlet" />


    <Button
        android:id="@+id/Sginup"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bt_uisquare"
        android:onClick="AdminPage"
        android:text="Admin Page"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/LginBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Sginup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="104dp"
        android:background="@drawable/bt_uisquare"
        android:onClick="LecturerPage"
        android:text="Lecturer Page"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/studentlogin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/LginBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="103dp"
        android:background="@drawable/bt_uisquare"
        android:onClick="StudentPage"
        android:text="Student Page"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="51dp"
        android:text="POWERED BY ABDULMALEK ALDHAFER\nFor more Info: ak_aldhafer@hotmail.com" />


</RelativeLayout>